# =====================
# TLS / Caddy
# =====================
CADDY_EMAIL=admin@ally360.co

# =====================
# GHCR (solo para scripts/deploy.sh)
# =====================
GHCR_USER=
GHCR_TOKEN=

# Tag para la imagen del backend (api-a/api-b/celery)
IMAGE_TAG=latest

# Imagen de homepage (Next.js)
# TODO: cuando publiques la imagen real, setea el valor (ej: ghcr.io/ally-360/ally360-web:latest)
ALLY360_WEB_IMAGE=ghcr.io/ally-360/ally360-web:latest

# =====================
# Postgres
# =====================
POSTGRES_USER=ally_user
POSTGRES_PASSWORD=change-me
POSTGRES_DB=ally_db

# =====================
# Redis
# =====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =====================
# MinIO (interno)
# =====================
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change-me
MINIO_BUCKET_NAME=ally360
MINIO_USE_SSL=false

# Protege console.ally360.co con Basic Auth (Caddy basic_auth)
# Genera un hash bcrypt con:
#   docker run --rm caddy:2 caddy hash-password --plaintext 'TU_PASSWORD'
# Usuario fijo: admin
MINIO_CONSOLE_PASSWORD_HASH=$2a$14$HUEktN5rL4VBwxhO2Zlee.lnmsHbUC9vtGtdyo0KJzBmcXDqWqd0C

# MinIO (público: para presigned URLs)
MINIO_PUBLIC_HOST=s3.ally360.co
MINIO_PUBLIC_PORT=443
MINIO_PUBLIC_USE_SSL=true

# =====================
# API (mínimo recomendado)
# =====================
ENVIRONMENT=production
DEBUG=false
AUTO_RUN_MIGRATIONS=false

# JWT / Signing
APP_SECRET_STRING=change-me-super-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS / URLs
FRONTEND_URL=https://app.ally360.co

# Email (si aplica)
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=true
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@ally360.co
EMAIL_FROM_NAME=Ally360
